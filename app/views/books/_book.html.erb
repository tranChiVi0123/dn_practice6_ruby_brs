<div>
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-md-4">
        <img src="/default_book.png" class="card-img" alt="book review">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h2 class="card-title"><%= link_to book.title, book_path(id: book.id) %></h2>
          <h4>Author: <%= book.author %></h4>
          <p class="card-text"><%= book.description.slice(0, 200) %> ...</p>
          <p class="card-text"><small class="text-muted">Updated at <%= book.updated_at %></small></p>
        </div>
      </div>
    </div>
  </div>
</div>