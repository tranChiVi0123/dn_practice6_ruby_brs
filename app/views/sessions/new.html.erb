<%= provide(:title, t(:signin))%>
<div class="row justify-content-center">
  <div class="col-6">
    <h2 class="text-center"><%= t(:signin) %></h2>
    <%= form_for(:session, url: signin_path) do |f| %>
      <%= f.label :email%>
      <%= f.email_field :email, class: "form-control", required:"required"%>
      <%= f.label t(:password) %>
      <%= f.password_field :password, class:"form-control", required:"required"%>
      <%= f.submit t(:signin), class:"btn btn-primary btn-block mt-4 mb-4"%>
      <div class="clearfix">
        <%= f.check_box :remember_me%>
        <%= f.label t(:remember_me), class:"form-check-label"%>
        <a href="#" class="float-right"><%=t(:forgot_password)%></a>
      </div>
    <% end %>
    <p class="text-center"><a href="<%=signup_path%>"><%=t(:create_new_account)%></a></p>
  </div>
</div>