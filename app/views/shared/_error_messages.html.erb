<div>
  <% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= I18n.t(:valid_form) %><%= pluralize(object.errors.count, I18n.t(:message_failed)) %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
</div>