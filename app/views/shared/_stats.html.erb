<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@locale, @user) %>">
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "following"%>
  </a>
  <a href="<%= followers_user_path(@locale, @user) %>">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "follower"%>
  </a>
</div>