<ol>
  <div class="card mb-3">
    <div class="row no-gutters">
      <div class="col-sm-5 mt-3" style="background: white;max-width:128px; max-height:128px;">
        <img src="/default_user.jpg" class="card-img rounded-circle" style='max-width:128px; max-height:128px; border: 3px solid #73AD21;'>
      </div>
      <div class="col-sm-7">
        <div class="card-body">
          <h5 class="card-title"><%= link_to user.name, user_path(id: user.id) %></h5>
          <p class="card-text">Has <%= user.reviews.length %> post</p>
          <%= button_to "View Profile", "#", class:"btn btn-primary stretched-link" %>
        </div>
      </div>
    </div>
  </div>
</ol>