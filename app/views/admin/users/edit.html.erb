<%= provide(:title, t(:edit_user))%>
<%= provide(:type_btn, t(:update_user))%>
<div class="row justify-content-center">
  <div class="col-6">
    <div class="login-form ">
      <h2 class="text-center"><%=t(:edit_user)%></h2>
      <%= form_for(@user, url:admin_user_path(@locale, @user), method: :patch) do |f| %>
        <%= render 'shared/error_messages', object: @user %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', required:"required" %>
        <%= f.label :email, class: "mt-3" %>
        <%= f.email_field :email, class: 'form-control', required:"required" %>
        <%= f.label :role, class: "mt-3 mb-3" %>
        <%= f.select :role, options_for_select([["admin", true],["user", false]], {:selected => @user.admin?}),class: "form-control" %>
        <br/>
        <%= f.label t(:password) %>
        <%= f.text_field :password, class: 'form-control'%>
        <%= f.submit yield(:type_btn), class: "btn btn-primary btn-block mt-4 mb-4" %>
      <% end %>
    </div>
  </div>